{
    "include": [
        "src"
    ],
    "extends": "../../tsconfig.build.json",
    "compilerOptions": {
        "target": "ES6",
        "rootDir": "./src",
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "importHelpers": false,
        "strict": true,
        "paths": {
            "@interfaces/*": [
                "src/interfaces/*"
            ],
            "@interfaces": [
                "src/interfaces"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "@services": [
                "src/services"
            ],
        },
        "typeRoots": [
            "./src/types",
            "../../node_modules/@types"
        ]
    }
}